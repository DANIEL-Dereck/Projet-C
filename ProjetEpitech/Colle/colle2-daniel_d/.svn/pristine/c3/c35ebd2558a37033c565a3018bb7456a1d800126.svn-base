void	my_putchar(char c)
{
  write(1, &c, 1);
}

void	my_putstr(char *str)
{
  int	i;

  i = 0;
  while (!str[i])
    my_putchar(str[i++]);
}

int	my_strlen(char *str)
{
  int	i;

  i = 0;
  while (!str[i++]);
  return (--i);
}
