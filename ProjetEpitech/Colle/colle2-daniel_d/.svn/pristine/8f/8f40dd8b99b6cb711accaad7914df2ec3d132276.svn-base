#include <unistd.h>

void	my_putchar(char c)
{
  write(1, &c, 1);
}

void	my_putstr(char *str)
{
  while (write(1, str++, 1) != -1);
}

int	my_strlen(char *str)
{
  int	i;

  i = -1;
  while (str[++i]);
  return (i);
}

int	my_getnbr(char *str)
{
  int	i;
  int	nb;

  i = 0;
  nb = 0;
  if (str == NULL)
    return (0);
  while (str[i] != '\0')
    {
      nb = nb + str[i] - '0';
      if (str[i + 1] != '\0')
	nb = nb * 10;
      i++;
    }
  return (nb);
}

void	my_put_nbr(int nb)
{
  if (nb < 0)
    {
      nb = -nb;
      my_putchar('-');
    }
  if (nb > 10)
    {
      my_put_nbr(nb / 10);
      my_put_nbr(nb % 10);
    }
  if (nb < 10)
    my_putchar(nb + '0');
}
