#include <unistd.h>

void	my_putchar(char c)
{
  write(1, &c, 1);
}

void	my_putstr(char *str)
{
  int	i;

  i = -1;
  while (str && str[++i])
    my_putchar(str[i]);
}

int	my_strlen(char *str)
{
  int	i;

  i = -1;
  while (str[++i]);
  return (i);
}

int	my_getnbr(char *str)
{
  int	i;
  int	nb;
  int	sign;

  i = 0;
  nb = 0;
  sign = 1;
  if (str == NULL)
    return (0);
  while (str[i] && (str[i] == '-' || str[i] == '+'))
    {
      sign *= (str[i] == '-') * -1 + (str[i] == '+');
      ++i;
    }
  while (str[i] && str[i] >= '0' && str[i] <= '9')
    {
      nb = nb * 10 + (str[i] - 48);
      ++i;
    }
  return (nb * sign);
}

void	my_putnbr(int nb)
{
  if (nb < 0)
    {
      nb = -nb;
      my_putchar('-');
    }
  if (nb >= 10)
    {
      my_putnbr(nb / 10);
      my_putnbr(nb % 10);
    }
  if (nb < 10)
    my_putchar(nb + '0');
}
